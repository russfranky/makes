{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "jsx": "preserve",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": "../../",
    "paths": {
      "@shared-utils": ["packages/shared-utils/src"],
      "@shared-utils/*": ["packages/shared-utils/src/*"],
      "@config": ["packages/config/src"],
      "@config/*": ["packages/config/src/*"]
    },
    "outDir": "build",
    "rootDir": "../../",
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "./**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "build"
  ]
}
